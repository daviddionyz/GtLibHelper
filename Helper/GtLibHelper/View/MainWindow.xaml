<Window x:Class="GtLibHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GtLibHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DockPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="New Project" />
                    <MenuItem Header="Open Project" />
                    <MenuItem Header="Save Project" />
                    <Separator />
                    <MenuItem Header="Exit" />
                </MenuItem>
            </Menu>
        </DockPanel>

        <DockPanel HorizontalAlignment="Center" Grid.Column="3">
            <Button DockPanel.Dock="Top" Height="30"  Name="Enumerator" Content="Enumerator"/>
            <Button DockPanel.Dock="Top" Height="30"  Name="IntervalEnumerator" Content="Interval Enumerator"/>
            <Button DockPanel.Dock="Top" Height="30"  Name="LinSearch" Content="Lin Search"/>
            <Button DockPanel.Dock="Top" Height="30"  Name="Selection" Content="Selection"/>
            <Button DockPanel.Dock="Top" Height="30"  Name="Summnation" Content="Summnation"/>
        </DockPanel>
        <DockPanel Grid.Column="3" Grid.Row="2">
            <Button DockPanel.Dock="Bottom" Height="30" Name="Save" Content="Save"/>
            <Button DockPanel.Dock="Bottom" Height="30" Name="Run" Content="Run"/>
        </DockPanel>
    </Grid>
</Window>
